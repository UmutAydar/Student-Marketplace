@model IEnumerable<UniMarket.Web.Models.Product>

<h2>Ürün Listesi</h2>

<p>
    <a class="btn btn-success" href="/Products/Create">Yeni Ürün Ekle</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-danger">
        Henüz ürün eklenmemiş.
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Satıldı mı?</th>
            <th>Tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>@(item.IsSold ? "Evet" : "Hayır")</td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Products/Details/@item.Id">Detay</a>
                    <a class="btn btn-sm btn-warning" href="/Products/Edit/@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" href="/Products/Delete/@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
