@model UniMarket.Web.Models.Product

<h2>Ürün Detayı</h2>

<div class="card p-3">
    <p><strong>Başlık:</strong> @Model.Title</p>
    <p><strong>Açıklama:</strong> @Model.Description</p>
    <p><strong>Fiyat:</strong> @Model.Price</p>
    <p><strong>Satıldı mı?:</strong> @(Model.IsSold ? "Evet" : "Hayır")</p>
    <p><strong>Eklenme Tarihi:</strong> @Model.CreatedAt</p>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" href="/Products">Geri</a>
    <a class="btn btn-warning" href="/Products/Edit/@Model.Id">Düzenle</a>
</div>
